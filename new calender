import React from 'react';
import DatePicker from 'react-datepicker';
import 'react-datepicker/dist/react-datepicker.css';
import { Controller } from 'react-hook-form';
import { Label } from './Label';
import CalendarIcon from '../icons/Calender';

const Datepicker = ({ label, control, name, errors }) => {
    return (
        <div className="relative">
            <Label name={name} label={label} />
            <Controller
                control={control}
                name={name}
                render={({ field: { onChange, value } }) => {
                    
                    const selectedDate = value ? new Date(value) : null;
                    const today = new Date();

                    return (
                        <div className="datepicker-wrapper">
                            <DatePicker
                                selected={selectedDate}
                                onChange={onChange}
                                dateFormat="dd-MM-yyyy"
                                minDate={new Date()} // Set minDate to today's date
                                className={`w-full px-4 py-2 border rounded-md pr-10 shadow appearance-none text-text_02 leading-tight focus:outline-none disabled:bg-input_bg disabled:text-txt_input disabled:border-brd_g_200 disabled:shadow-none ${
                                    errors[name]
                                        ? 'border-support_01'
                                        : 'border-gray-400'
                                }`}
                                calendarClassName="bg-white shadow-lg rounded border border-gray-400"
                                dayClassName={(date) =>
                                    date.toDateString() === selectedDate?.toDateString() // Check if the date matches the selected date
                                        ? 'text-white bg-green-500 rounded-full p-2' // Apply green background to the selected date
                                        : date.toDateString() === today.toDateString() // Check if the date is today's date
                                            ? 'text-white bg-orange-500 rounded-full p-2' // Apply orange background to today's date
                                            : date < today ? 'text-gray-400 rounded-full p-2' : 'text-text_02 hover:bg-vfRed/70 hover:text-vfWhite rounded-full p-2'
                                }
                                monthClassName={(date) =>
                                    'text-text_02 hover:bg-vfRed/70 hover:text-vfWhite rounded-md p-2 bg-red-500' // Apply red background to months
                                }
                                yearClassName={(date) =>
                                    'text-text_02 hover:bg-vfRed/70 hover:text-vfWhite rounded-md p-2 bg-red-500' // Apply red background to years
                                }
                                popperClassName="min-w-[300px] lg:min-w-[400px] md:min-w-[400px] sm:min-w-[300px]"
                            />
                            <div className="absolute inset-y-[1rem] right-0 flex items-center px-3 pointer-events-none">
                                <CalendarIcon
                                    width="24px"
                                    height="24px"
                                    className="text-text_02"
                                />
                            </div>
                            {errors[name] && (
                                <p className="text-support_01 text-xs">{errors[name].message}</p>
                            )}
                        </div>
                    );
                }}
            />
        </div>
    );
};

export default Datepicker;
